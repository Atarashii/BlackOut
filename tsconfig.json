{
    "compileOnSave": true,
    "compilerOptions": {
        "noImplicitAny": true,
        "noEmitOnError": true,
        "removeComments": true,
        "allowUnreachableCode": false,
        "target": "ES2020",
        "strict": true,
        "module": "system",
        "allowJs": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "composite": true,
        "tsBuildInfoFile": null,
        "outFile": "./Script/Compiled/bundle.js",
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "exclude": [
        "node_modules",
        "./Script/Compiled/*",
        "./**/*.js"
    ]
}